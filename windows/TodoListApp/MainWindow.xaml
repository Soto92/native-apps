<Window x:Class="TodoListApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Todo List" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Name="taskDescriptionTextBox" Width="400" Height="30" Margin="10"/>
            <Button Content="Add Task" Width="100" Height="30" Margin="10" Click="AddTaskButton_Click"/>
            <ListBox Name="taskListBox" Width="400" Height="300" Margin="10" DisplayMemberPath="Description"/>
        </StackPanel>
    </Grid>
</Window>
